{
  "compilerOptions": {
    "moduleResolution": "node",
    // "module": "commonjs",
    "module": "es6",
    "target": "es6",
    "lib": [ "es6", "dom" ],
    "outDir": "lib-esm",
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true
    // "jsx": "react"
  },
  // "files": [
  //   "./src/index.ts"
  // ],
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}